DEMO_NAME=temple
INSTANCE_DIR=./instances/temple

# IPC device id（雲端以環境變數 hid 模擬 MAC address）
# TODO: 請替換成宮廟機 demo 的 HID
HID=02:a3:de:22:d0:5d
TZ=Asia/Taipei

REST_PORT=13001
MQTT_PORT=13003
MQTT_WS_PORT=13004

# Cross-instance networking
# Standalone instance uses its own isolated meshnet (not shared demo-mesh)
# Frontend uses port mapping instead of meshnet DNS for /media/ proxy
MESHNET_NAME=temple_meshnet
MESHNET_EXTERNAL=false

# Image tags are split out by environment:
# - instances/temple/.images.local.env (dev on this host)
# - instances/temple/.images.prod.env  (deploy on a fresh host)
